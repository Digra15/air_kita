generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPER_ADMIN
  ADMIN
  METER_READER
  TREASURER
  CUSTOMER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(CUSTOMER)
  customer  Customer?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tariff {
  id           String     @id @default(cuid())
  name         String
  ratePerCubic Decimal
  baseFee      Decimal    @default(0)
  description  String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  customers    Customer[]
}

model Customer {
  id          String         @id @default(cuid())
  name        String
  meterNumber String         @unique
  address     String
  phoneNumber String?
  status      CustomerStatus @default(ACTIVE)
  userId      String?        @unique
  user        User?          @relation(fields: [userId], references: [id])
  tariffId    String
  tariff      Tariff         @relation(fields: [tariffId], references: [id])
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  readings    MeterReading[]
  bills       Bill[]
}

enum CustomerStatus {
  ACTIVE
  INACTIVE
}

model MeterReading {
  id           String   @id @default(cuid())
  customerId   String
  customer     Customer @relation(fields: [customerId], references: [id])
  month        Int
  year         Int
  meterReading Decimal
  usageAmount  Decimal
  recordedAt   DateTime @default(now())
  bill         Bill?

  @@unique([customerId, month, year])
}

model Bill {
  id        String     @id @default(cuid())
  customerId String
  customer   Customer   @relation(fields: [customerId], references: [id])
  readingId  String     @unique
  reading    MeterReading @relation(fields: [readingId], references: [id])
  amount     Decimal
  status     BillStatus @default(UNPAID)
  paymentMethod PaymentMethod?
  dueDate    DateTime
  paidAt     DateTime?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

enum BillStatus {
  UNPAID
  PAID
  OVERDUE
}

enum PaymentMethod {
  CASH
  QRIS
  TRANSFER
  EDC
}

// Finance Models

model Transaction {
  id          String          @id @default(cuid())
  type        TransactionType
  amount      Decimal
  category    String          // e.g., "OPERASIONAL", "GAJI", "TAGIHAN", "MODAL"
  description String
  date        DateTime        @default(now())
  referenceId String?         // Optional: link to Bill ID
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

enum TransactionType {
  CAPITAL       // Modal Awal
  REVENUE       // Pendapatan dari Tagihan
  OTHER_INCOME  // Pemasukan Lain
  EXPENSE       // Pengeluaran
}

model SystemSettings {
  id              Int     @id @default(1)
  companyName     String  @default("Air Kita")
  companyEmail    String  @default("admin@airkita.com")
  companyPhone    String  @default("+62 812-3456-7890")
  companyWebsite  String  @default("https://airkita.com")
  companyAddress  String  @default("Jl. Contoh No. 123")
  companyLogo     String? // URL to the uploaded logo
  
  // Custom Text
  heroTitle       String  @default("Kelola Tagihan Air Anda dengan Mudah & Cepat")
  heroDescription String  @default("Pantau penggunaan air, cek tagihan bulanan, dan lakukan pembayaran dengan mudah melalui platform digital Air Kita.")
  loginTitle      String  @default("Layanan Air Bersih Digital Terpercaya")
  loginDescription String @default("Kelola pembayaran air Anda dengan mudah, cepat, dan aman melalui platform digital kami.")
  
  // Security
  enable2FA       Boolean @default(false)
  sessionTimeout  Int     @default(30) // minutes
  
  // Database & Backup
  backupDaily     Boolean @default(true)
  retentionDays   Int     @default(30)
  
  updatedAt       DateTime @updatedAt
}

model BackupHistory {
  id        String   @id @default(cuid())
  fileName  String
  fileSize  String   // e.g. "2.5 MB"
  status    BackupStatus @default(SUCCESS)
  createdAt DateTime @default(now())
}

enum BackupStatus {
  SUCCESS
  FAILED
  PENDING
}
